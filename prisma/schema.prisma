generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String?  @unique          // ì´ë©”ì¼ ë¡œê·¸ì¸ìš©
  password     String?                   // bcrypt í•´ì‹œ
  kakaoId      String?  @unique          // Optionalë¡œ ë³€ê²½ (ì¹´ì¹´ì˜¤ ë¡œê·¸ì¸ìš©)
  nickname     String?
  geminiApiKey String?                   // AES-256-GCM ì•”í˜¸í™”ëœ Gemini API Key
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  subscription       Subscription?
  crews              Crew[]
  chatSessions       ChatSession[]
  usageLogs          UsageLog[]
}

// êµ¬ë… ëª¨ë¸
model Subscription {
  id                   String    @id @default(cuid())
  userId               String    @unique
  plan                 String    @default("free")  // "free" | "pro"
  status               String    @default("active") // "active" | "canceled" | "past_due"
  stripeCustomerId     String?
  stripeSubscriptionId String?
  currentPeriodStart   DateTime  @default(now())
  currentPeriodEnd     DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ì‚¬ìš©ëŸ‰ ë¡œê·¸ ëª¨ë¸
model UsageLog {
  id        String   @id @default(cuid())
  userId    String
  type      String   // "message_send" | "crew_create"
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, type, createdAt])
}

// AI í¬ë£¨ íŒ€ êµ¬ì¶• í”Œë«í¼ ëª¨ë¸
model Crew {
  id            String   @id @default(cuid())
  name          String
  role          String
  instructions  String
  avatarUrl     String?
  userId        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user            User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages        Message[]
  chatSessions    ChatSessionCrew[]
  optimizations   Optimization[]

  @@index([userId])
}

model ChatSession {
  id        String   @id @default(cuid())
  type      String   // 'direct' | 'group'
  userId    String
  title     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user         User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages     Message[]
  threads      Thread[]
  crewMembers  ChatSessionCrew[]

  @@index([userId])
}

model ChatSessionCrew {
  id          String       @id @default(cuid())
  sessionId   String
  crewId      String
  session     ChatSession  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  crew        Crew         @relation(fields: [crewId], references: [id], onDelete: Cascade)

  @@unique([sessionId, crewId])
  @@index([sessionId])
  @@index([crewId])
}

model Message {
  id        String   @id @default(cuid())
  sessionId String
  crewId    String?  // nullì´ë©´ ì‚¬ìš©ì ë©”ì‹œì§€
  content   String
  role      String   // 'user' | 'assistant' | 'system'
  metadata  String?  // JSON
  createdAt DateTime @default(now())

  session ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  crew    Crew?       @relation(fields: [crewId], references: [id], onDelete: SetNull)
  threads Thread[]

  @@index([sessionId])
  @@index([crewId])
  @@index([createdAt])
}

model Thread {
  id              String   @id @default(cuid())
  sessionId       String
  parentMessageId String?
  title           String?
  createdAt       DateTime @default(now())

  session       ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  parentMessage Message?    @relation(fields: [parentMessageId], references: [id], onDelete: SetNull)

  @@index([sessionId])
  @@index([parentMessageId])
}

model Optimization {
  id                  String   @id @default(cuid())
  crewId              String
  previousInstructions String
  newInstructions     String
  reason              String?
  createdAt           DateTime @default(now())

  crew Crew @relation(fields: [crewId], references: [id], onDelete: Cascade)

  @@index([crewId])
}

// Crew Templates (Admin-managed)
model CrewTemplate {
  id           String   @id @default(cuid())
  name         String
  role         String
  instructions String
  description  String
  iconEmoji    String   @default("ğŸ¤–")
  category     String   @default("general")
  isPublic     Boolean  @default(true)
  usageCount   Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([category])
  @@index([isPublic])
}
